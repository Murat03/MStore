@model IEnumerable<Category>

<div class="text-center my-3">
	<div class="display-6">Categories</div>
</div>

<table>
	<thead>
		<tr>
			<th>
				Category Id
			</th>
			<th>
				Category Name
			</th>
			<th>
				Operations
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in @Model)
		{
			<tr>
				<td>
					@category.CategoryId
				</td>
				<td>
					@category.CategoryName
				</td>
				<td>
					<a data-toggle="tooltip"
					   data-placement="top"
					   title="Delete"
					   class="btn btn-danger" asp-action="Delete" asp-route-id="@category.CategoryId">
						<i class="fa fa-trash"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="text-center">
	<h6>
		Add a New Category
	</h6>
</div>
<form method="post" asp-action="Create">
	<div class="form-group">
	<input class="col-md-9" name="categoryname" type="text" />
	<button data-toggle="tooltip"
			data-placement="top"
			title="Add Category"
			class="col-md-1 btn btn-sm btn-success" type="submit">
		<i class="fa-solid fa-plus"></i>
	</button>
	</div>
</form>