@model Product

<div class="col-sm-12 col-md-12 col-lg-6 col-xxl-4 my-2">
	<div class="card" style="width: 18rem;">
		<div class="card-header text-center">@Model.Name</div>
		<img src="" class="card-img-top" alt="...">
		<div class="card-body">
			<p class="card-text"></p>
			<p class="card-text text-center">@Model?.Price.ToString("c")</p>
			<div class="d-flex justify-content-center">
				<div class="btn btn-group">
					<form id="@Model.Id" asp-page="/cart" method="post">
						<input type="hidden" asp-for="Id" />
						<input type="hidden" name="returnUrl" value="" />
						<button type="submit" class="btn btn-outline-secondary mx-1">
							<i class="fa fa-cart-plus"></i>
						</button>
					</form>
					<a class="btn btn-outline-secondary rounded" asp-controller="Product" asp-action="Get" asp-route-id="@Model.Id">
						<i class="fa-solid fa-arrow-right"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
