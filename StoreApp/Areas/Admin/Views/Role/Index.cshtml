@model IEnumerable<IdentityRole>

<div class="text-center my-3">
	<div class="display-6">Roles</div>
	<div class="d-flex justify-content-end my-3">
		<a class="btn btn-outline-success" asp-action="Create">
			<i class="fa fa-plus"></i>
			Create
		</a>
	</div>
</div>

<table>
	<thead>
		<th>Role Name</th>
		<th>Operations</th>
	</thead>
	<tbody>
		@foreach (var role in Model)
		{
			<tr>
				<td class="col-md-9">
					@role.Name
				</td>
				<td class="col-md-3">
					<a data-toggle="tooltip"
					   data-placement="top"
					   title="Delete"
					   class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Name">
						<i class="fa fa-trash"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>