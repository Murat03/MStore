@model IEnumerable<IdentityRole>

<div class="container">
	<div class="text-center">
		<div class="display-6">Roles</div>
		<div class="d-flex justify-content-end my-3">
			<a class="btn btn-outline-success" asp-action="Create">
				<i class="fa fa-plus"></i>
				Create
			</a>
		</div>
	</div>

	<table>
		<thead>
			<row>
				<th>Role Name</th>
				<th>Operations</th>
			</row>
		</thead>
		<tbody>
			@foreach (var role in Model)
			{
				<tr>
					<td class="col-md-9">
						@role.Name
					</td>
					<td class="col-md-3">
						<a data-toggle="tooltip"
						   data-placement="top"
						   title="Delete"
						   class="btn btn-danger" asp-action="Delete" asp-route-id="@role.Name">
							<i class="fa fa-trash"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div class="text-center">
		<h6>
			Add a New Role
		</h6>
	</div>
	<form method="post" asp-action="Create">
		<div style="float:left">
			<input name="rolename" type="text" />
		</div>
		<div style="float:left">
			<button data-toggle="tooltip"
					data-placement="top"
					title="Add Role"
					class="btn btn-sm btn-success rounded-start-0" type="submit">
				<i class="fa-solid fa-plus"></i>
			</button>
		</div>
	</form>
</div>